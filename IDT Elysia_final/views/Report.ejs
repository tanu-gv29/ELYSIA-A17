<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Your Report - Elysia</title>
  <link rel="stylesheet" href="/styles.css" />
  <style>
    .background {
      height: 100vh;
      width: 100vw;
      background-image: url('/Img2.jpg');
      background-position: center;
      background-size: cover;
      background-repeat: no-repeat;
      filter: brightness(1.2);
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-top: 100px;
      font-family: 'Poppins', sans-serif;
    }

    .report-box {
      background: rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(15px);
      padding: 40px;
      border-radius: 20px;
      width: 600px;
      color: white;
      text-align: left;
      box-shadow: 0 0 20px rgba(126, 1, 172, 0.3);
    }

    .report-box h2 {
      text-align: center;
      margin-bottom: 20px;
    }

    .report-box h3 {
      margin-top: 20px;
      color: #fff;
    }

    .report-box p, .report-box li, blockquote {
      font-size: 16px;
      line-height: 1.6;
    }

    blockquote {
      margin-top: 20px;
      padding-left: 20px;
      border-left: 4px solid #fff;
      font-style: italic;
      color: #ffe;
    }

    /* Navbar */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 50px;
      position: absolute;
      top: 0;
      width: 100%;
    }

    .nav-links {
      display: flex;
      align-items: center;
      gap: 30px;
      position: relative;
    }

    .user-menu {
      position: relative;
      display: flex;
      align-items: center;
    }

    .user-circle {
      width: 40px;
      height: 40px;
      background-color: white;
      color: #7E01AC;
      font-weight: bold;
      font-size: 18px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
    }

    .dropdown {
      position: absolute;
      top: 60px;
      right: 0;
      background: linear-gradient(145deg, #ffffff, #f8e6fc);
      border: 1px solid #ccc;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(126, 1, 172, 0.3);
      display: none;
      flex-direction: column;
      width: 200px;
      z-index: 10;
      padding: 10px 0;
      animation: fadeIn 0.2s ease-in-out;
    }

    .dropdown a {
      padding: 12px 20px;
      text-decoration: none;
      font-family: 'Inknut Antiqua', serif;
      font-size: 16px;
      color: #4c074b;
      transition: background 0.3s, color 0.3s;
    }

    .dropdown a:hover {
      background-color: #f3d5fb;
      color: #7E01AC;
      font-weight: bold;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to   { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>

  <div class="background">

    <!-- âœ… Navbar with dynamic user logic -->
    <nav class="navbar">
      <div class="logo-top">Elysia</div>
      <div class="nav-links">
        <a href="/">Home</a>
        <a href="/aboutus">About us</a>
        <a href="/dashboard">Dashboard</a>
        <a href="#">Subscription</a>

        <% if (!user) { %>
          <a href="/login">Log in</a>
        <% } else { %>
          <div class="user-menu">
            <div class="user-circle" id="userCircle"><%= user.initial %></div>
            <div class="dropdown" id="dropdownMenu">
              <a href="/profile">Profile</a>
              <a href="/past">Past Interaction</a>
              <a href="#">Recent Report</a>
              <a href="/logout">Logout</a>
            </div>
          </div>
        <% } %>
      </div>
    </nav>

    <!-- âœ… Report Content -->
    <div class="report-box">
      <h2>Your Session Report</h2>

      <h3>ðŸªž Your Mood Today:</h3>
      <p><strong><%= summary.mood %></strong></p>

      <h3>ðŸ“Œ Key Takeaways:</h3>
      <ul>
        <% summary.takeaways.forEach(item => { %>
          <li><%= item %></li>
        <% }) %>
      </ul>

      <h3>ðŸš€ Next Steps:</h3>
      <ul>
        <% summary.nextSteps.forEach(step => { %>
          <li><%= step %></li>
        <% }) %>
      </ul>

      <h3>ðŸ’¡ Quote of the Day:</h3>
      <blockquote><%= summary.quote %></blockquote>
    </div>

  </div>

  <!-- JS for dropdown toggle -->
  <script>
    const circle = document.getElementById('userCircle');
    const dropdown = document.getElementById('dropdownMenu');
    if (circle && dropdown) {
      circle.addEventListener('click', () => {
        dropdown.style.display = dropdown.style.display === 'flex' ? 'none' : 'flex';
      });

      window.addEventListener('click', (e) => {
        if (!circle.contains(e.target) && !dropdown.contains(e.target)) {
          dropdown.style.display = 'none';
        }
      });
    }
  </script>

</body>
</html>
